{
  "openapi": "3.0.1",
  "info": {
    "title": "Task Management API",
    "description": "An API to perform task management operations",
    "contact": {
      "name": "Muhammad Zafir Alvi",
      "email": "muhammad.zafir.alvi.official@gmail.com"
    },
    "version": "v1"
  },
  "paths": {
    "/api/v1/UserTasks/get-all-task": {
      "get": {
        "tags": [
          "UserTasks"
        ],
        "summary": "Get all tasks",
        "description": "Retrieve a list of all tasks.",
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/api/v1/UserTasks/get-task-by-id": {
      "post": {
        "tags": [
          "UserTasks"
        ],
        "summary": "Get task by ID",
        "description": "Retrieve a task by its ID.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/GetTaskDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/GetTaskDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/GetTaskDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/api/v1/UserTasks/update-task": {
      "patch": {
        "tags": [
          "UserTasks"
        ],
        "summary": "Update task",
        "description": "Update an existing task.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserTask"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/UserTask"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/UserTask"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/api/v1/UserTasks/create-task": {
      "post": {
        "tags": [
          "UserTasks"
        ],
        "summary": "Create task",
        "description": "Create a new task.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserTask"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/UserTask"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/UserTask"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/api/v1/UserTasks/delete-task-by-id": {
      "delete": {
        "tags": [
          "UserTasks"
        ],
        "summary": "Delete task by ID",
        "description": "Delete a task by its ID.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/DeleteTaskRequestDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/DeleteTaskRequestDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/DeleteTaskRequestDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "DeleteTaskRequestDto": {
        "required": [
          "id"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "GetTaskDto": {
        "required": [
          "id"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "TaskStatus": {
        "enum": [
          0,
          1
        ],
        "type": "integer",
        "format": "int32"
      },
      "UserTask": {
        "required": [
          "dueDate",
          "title"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "title": {
            "minLength": 1,
            "type": "string"
          },
          "description": {
            "type": "string",
            "nullable": true
          },
          "dueDate": {
            "type": "string",
            "format": "date-time"
          },
          "status": {
            "$ref": "#/components/schemas/TaskStatus"
          }
        },
        "additionalProperties": false
      }
    }
  }
}